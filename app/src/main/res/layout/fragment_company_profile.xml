<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Company.FragmentCompanyProfile"
    android:background="@drawable/profile_background"
    >


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/CompanyProfile_Img"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.07"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.01999998"
        app:shapeAppearanceOverlay="@style/roundedImage"
        tools:src="@tools:sample/avatars"
        app:layout_constraintHeight_percent="0.24"
        app:layout_constraintDimensionRatio="H,2:2"
        />

    <TextView
        android:id="@+id/CompanyProfile_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alike_angular"
        android:maxLines="1"
        android:text="TextView"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_Img"
        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_Img"
        app:layout_constraintVertical_bias="0.04000002" />

    <TextView
        android:id="@+id/CompanyProfile_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="TextView"
        android:fontFamily="@font/alike_angular"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_Name"
        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_Name"
        app:layout_constraintVertical_bias="0.02" />

    <TextView
        android:id="@+id/CompanyProfile_Category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="TextView"
        android:fontFamily="@font/alike_angular"
        android:textStyle="bold"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_Email"
        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_Email"
        app:layout_constraintVertical_bias="0.02" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CompanyProfile_UpdateBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alike_angular"
        android:gravity="start|center_vertical"
        android:text="Update Profile"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_profile"
        app:iconGravity="start"
        app:iconPadding="20dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_Category"

        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_Category"
        app:layout_constraintVertical_bias="0.060000002" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CompanyProfile_PasswordBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alike_angular"
        android:gravity="start|center_vertical"
        android:text="Change Password"
        android:textAllCaps="false"

        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_password_edit2"
        app:iconGravity="start"
        app:iconPadding="20dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_UpdateBtn"
        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_UpdateBtn"
        app:layout_constraintVertical_bias="0.01999998" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CompanyProfile_AboutBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alike_angular"
        android:gravity="start|center_vertical"
        android:text="About Company"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_info"
        app:iconGravity="start"
        app:iconPadding="20dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_PasswordBtn"
        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_PasswordBtn"
        app:layout_constraintVertical_bias="0.023" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CompanyProfile_TermsBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alike_angular"
        android:gravity="start|center_vertical"
        android:text="Terms and Conditions"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_agreement"
        app:iconGravity="start"
        app:iconPadding="20dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_AboutBtn"
        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_AboutBtn"
        app:layout_constraintVertical_bias="0.023" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CompanyProfile_DiscountBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alike_angular"
        android:gravity="start|center_vertical"
        android:text="Discount Range"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_coupon_discount"
        app:iconGravity="start"
        app:iconPadding="20dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/CompanyProfile_TermsBtn"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_TermsBtn"
        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_TermsBtn"
        app:layout_constraintVertical_bias="0.023" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/CompanyProfile_logoutBtn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/alike_angular"
        android:gravity="start|center_vertical"
        android:text="Logout"
        android:textAllCaps="false"
        android:textColor="?attr/colorOnSecondary"
        android:textSize="18sp"
        android:textStyle="bold"
        app:icon="@drawable/ic_logout"
        app:iconGravity="start"
        app:iconPadding="20dp"
        app:iconSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/CompanyProfile_DiscountBtn"
        app:layout_constraintTop_toBottomOf="@+id/CompanyProfile_DiscountBtn"
        app:layout_constraintVertical_bias="0.060000002" />


</androidx.constraintlayout.widget.ConstraintLayout>